{
  "name": "universidad-sistema",
  "version": "1.0.0",
  "description": "Sistema de GestiÃ³n Universitaria con PostgreSQL y Sequelize",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "bash scripts/setup-db.sh",
    "seed": "bash scripts/seed-db.sh",
    "test": "jest",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up"
  },
  "keywords": [
    "universidad",
    "postgres",
    "sequelize",
    "nodejs",
    "express"
  ],
  "author": "Equipo Base de Datos 1 - UVG",
  "license": "MIT",
  "dependencies": {
    "sequelize": "^6.32.1",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
